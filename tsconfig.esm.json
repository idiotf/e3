{
  "compilerOptions": {
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "isolatedModules": true,
    "incremental": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
